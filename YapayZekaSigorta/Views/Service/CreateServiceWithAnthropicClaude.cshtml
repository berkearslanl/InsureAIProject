
@{
    ViewData["Title"] = "CreateServiceWithAnthropicClaude";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var services = ViewBag.services as List<string>;
}


<div class="container-fluid px-4">
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-shield-shaded me-2 text-info"></i>Claude 3 Haiku: Hizmet Önerileri
                        </h5>
                        <a href="@Url.Action("CreateServiceWithAnthropicClaude")" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-arrow-clockwise"></i> Yenile
                        </a>
                    </div>
                </div>

                <div class="card-body p-4 bg-light">
                    @if (services != null && services.Any() && !services[0].Contains("Hata"))
                    {
                        <div class="row g-4">
                            @for (int i = 0; i < services.Count; i++)
                            {
                                <div class="col-md-6 col-xl-4">
                                    <div class="card h-100 border-0 shadow-sm service-card transition-all">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-3">
                                                <div class="flex-shrink-0">
                                                    <span class="badge bg-info-soft text-info rounded-circle p-3">
                                                        <i class="bi bi-check2-circle fs-5"></i>
                                                    </span>
                                                </div>
                                                <div class="ms-3">
                                                    <h6 class="mb-0 fw-bold">Hizmet Seçeneği @(i + 1)</h6>
                                                </div>
                                            </div>
                                            <p class="card-text text-secondary mb-0">
                                                @services[i]
                                            </p>
                                        </div>
                                        <div class="card-footer bg-transparent border-0 pt-0 text-end">
                                            <button class="btn btn-link btn-sm text-decoration-none p-0" onclick="copyThis('@services[i]')">
                                                <i class="bi bi-clipboard me-1"></i> Kopyala
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger shadow-sm border-0">
                            <div class="d-flex">
                                <i class="bi bi-bug-fill me-3 fs-3"></i>
                                <div>
                                    <h5 class="alert-heading">Bağlantı Sorunu!</h5>
                                    <p class="mb-0">@((services != null && services.Any()) ? services[0] : "Beklenmedik bir hata oluştu.")</p>
                                    <hr>
                                    <p class="small mb-0">İpucu: API anahtarınızı veya internet bağlantınızı kontrol edip tekrar deneyin.</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-info-soft {
        background-color: rgba(13, 202, 240, 0.1);
    }

    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        border-left: 4px solid #0dcaf0 !important;
    }

    .transition-all {
        transition: all 0.3s ease;
    }
</style>

<script>
    function copyThis(text) {
        navigator.clipboard.writeText(text).then(() => {
            alert("Hizmet metni kopyalandı!");
        });
    }
</script>