@{
    ViewData["Title"] = "ChatWithAI";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<style>

    body {
        background: linear-gradient(135deg, #f3f4f6, #e0f2fe);
    }

    #chat {
        border-radius: 20px;
        padding: 20px;
        height: 420px;
        overflow-y: auto;
        background: rgba(255,255,255,0.6);
        backdrop-filter: blur(12px);
        box-shadow: 0 10px 30px rgba(0,0,0,.08);
        display: flex;
        flex-direction: column;
        gap: 14px;
        scroll-behavior: smooth;
    }

        #chat::-webkit-scrollbar {
            width: 6px;
        }

        #chat::-webkit-scrollbar-thumb {
            background: rgba(0,0,0,.15);
            border-radius: 10px;
        }

    .message {
        max-width: 75%;
        padding: 12px 16px;
        border-radius: 18px;
        line-height: 1.6;
        animation: fadeIn .2s ease-in;
        font-size: 14px;
    }

    .user-message {
        align-self: flex-end;
        background: linear-gradient(135deg,#2563eb,#1e40af);
        color: white;
        border-bottom-right-radius: 6px;
        box-shadow: 0 4px 14px rgba(37,99,235,.25);
    }

    .ai-message {
        align-self: flex-start;
        background: white;
        border: 1px solid #e5e7eb;
        border-bottom-left-radius: 6px;
        box-shadow: 0 4px 14px rgba(0,0,0,.05);
    }

    #inputArea {
        display: flex;
        gap: 10px;
        margin-top: 16px;
    }

    #messageInput {
        flex: 1;
        padding: 12px 16px;
        border-radius: 16px;
        border: 1px solid #d1d5db;
        outline: none;
        font-size: 14px;
        transition: .2s;
        background: white;
    }

        #messageInput:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37,99,235,.15);
        }

    #sendBtn {
        padding: 12px 22px;
        border-radius: 16px;
        border: none;
        background: linear-gradient(135deg,#10a37f,#059669);
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: .2s;
        box-shadow: 0 6px 18px rgba(16,163,127,.3);
    }

        #sendBtn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 22px rgba(16,163,127,.4);
        }

        #sendBtn:disabled {
            opacity: .6;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

    #typing {
        font-size: 13px;
        opacity: .6;
        margin-top: 8px;
        display: none;
        font-style: italic;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(5px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .dots::after {
        content: '';
        animation: dots 1.2s infinite steps(3);
    }

    @@keyframes dots {
        0% {
            content: '';
        }

        33% {
            content: '.';
        }

        66% {
            content: '..';
        }

        100% {
            content: '...';
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        #chat {
            height: 350px;
        }

        .message {
            max-width: 90%;
        }
    }

</style>

<div id="chat" style="white-space:pre-wrap"></div>
<div id="typing">AI Yazıyor<span class="dots"></span></div>

<div id="inputArea">
    <input id="messageInput" type="text" placeholder="Mesajınızı yazın..." />
    <button id="sendBtn">Gönder</button>
</div>

<script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.0/dist/browser/signalr.min.js"></script>
<script>
    const chat = document.getElementById('chat');
    const typing = document.getElementById('typing');
    const input = document.getElementById('messageInput');
    const sendBtn = document.getElementById('sendBtn');

    let bufEl = null;

    const conn = new signalR.HubConnectionBuilder()
        .withUrl("/chathub")
        .withAutomaticReconnect()
        .build();

    conn.on("ReceiveUserEcho", (text) => {
        const div = document.createElement('div');
        div.className = "message user-message";
        div.innerHTML = text;
        chat.appendChild(div);
        chat.scrollTop = chat.scrollHeight;
    });

    conn.on("ReceiveToken", (token) => {
        typing.style.display = 'block';
        if (!bufEl) {
            bufEl = document.createElement('div');
            bufEl.className = "message ai-message";
            bufEl.textContent = "";
            chat.appendChild(bufEl);
        }
        bufEl.textContent += token;
        chat.scrollTop = chat.scrollHeight;
    });

    conn.on("CompleteMessage", (_full) => {
        typing.style.display = 'none';
        input.disabled = false;
        sendBtn.disabled = false;
        bufEl = null;
        chat.scrollTop = chat.scrollHeight;
    });

    async function start() {
        try { await conn.start(); } catch (e) { console.error(e); setTimeout(start, 1500); }
    }
    start();

    async function send() {
        const text = input.value.trim();
        if (!text) return;

        input.disabled = true;
        sendBtn.disabled = true;

        input.value = "";
        bufEl = null;
        typing.style.display = 'block';

        await conn.invoke("SendMessage", text);
    }

    sendBtn.addEventListener('click', send);
    input.addEventListener('keydown', e => { if (e.key === 'Enter') send(); });
</script>

