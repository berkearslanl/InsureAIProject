
@{
    ViewData["Title"] = "CreateAboutWithGemini";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    ViewData["Title"] = "AI Hakkımızda Oluşturucu";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid px-4">
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-stars me-2"></i>Google Gemini AI: Hakkımızda Taslağı</h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info border-0 shadow-sm mb-4">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        Aşağıdaki içerik Google Gemini AI tarafından kurumsal kimliğinize uygun olarak otomatik olarak üretilmiştir.
                    </div>

                    <div class="about-content-box p-4 bg-white border rounded-3 position-relative" style="min-height: 200px;">
                        @if (ViewBag.abouttext != null)
                        {
                            <div class="prose" id="aiGeneratedText">
                                @Html.Raw(ViewBag.abouttext)
                            </div>

                            <hr />
                            <div class="d-flex justify-content-end gap-2">
                                <button class="btn btn-outline-primary btn-sm" onclick="copyContent()">
                                    <i class="bi bi-clipboard"></i> Kopyala
                                </button>
                                <a href="@Url.Action("CreateAboutWithGemini")" class="btn btn-primary btn-sm">
                                    <i class="bi bi-arrow-clockwise"></i> Yeniden Oluştur
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <div class="spinner-border text-primary" role="status"></div>
                                <p class="mt-3">Yapay zeka içeriği hazırlıyor, lütfen bekleyin...</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(45deg, #0d6efd, #6610f2);
    }

    .prose {
        line-height: 1.8;
        color: #334155;
        font-size: 1.1rem;
    }

        .prose h1, .prose h2, .prose h3 {
            color: #1e293b;
            font-weight: 700;
            margin-top: 1.5rem;
        }
</style>

<script>
    function copyContent() {
        const text = document.getElementById('aiGeneratedText').innerText;
        navigator.clipboard.writeText(text);
        alert("İçerik panoya kopyalandı!");
    }
</script>