@model CreateUserRegisterDto
@{
    Layout = null;
}

<!doctype html>
<html lang="en" class="semi-dark">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/snacked/ltr/assets/images/favicon-32x32.png" type="image/png" />
    <!-- Bootstrap CSS -->
    <link href="/snacked/ltr/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/snacked/ltr/assets/css/bootstrap-extended.css" rel="stylesheet" />
    <link href="/snacked/ltr/assets/css/style.css" rel="stylesheet" />
    <link href="/snacked/ltr/assets/css/icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <!-- loader-->
    <link href="/snacked/ltr/assets/css/pace.min.css" rel="stylesheet" />

    <title>Insure You AI Kullanıcı Kayıt</title>
</head>

<body class="bg-register">

    <!--start wrapper-->
    <div class="wrapper">

        <!--start content-->
        <main class="authentication-content mt-5">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-lg-4 mx-auto">
                        <div class="card shadow rounded-5 overflow-hidden">
                            <div class="card-body p-4 p-sm-5">
                                <h5 class="card-title">Yeni Kullanıcı Kaydı</h5>
                                <p class="card-text mb-5">Bize katılın!</p>
                                <form class="form-body" method="post">
                                    <div class="d-grid">
                                        <a class="btn btn-white radius-30" href="javascript:;">
                                            <span class="d-flex justify-content-center align-items-center">
                                                <img class="me-2" src="/snacked/ltr/assets/images/icons/search.svg" width="16" alt="">
                                                <span>Google ile Kayıt Olun</span>
                                            </span>
                                        </a>
                                    </div>
                                    <div class="login-separater text-center mb-4">
                                        <span>veya mail ile kayıt olun</span>
                                        <hr>
                                    </div>
                                    <div class="row g-3">
                                        <div class="col-12 ">
                                            <label for="inputName" class="form-label">Adınız</label>
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-person-circle"></i></div>
                                                <input type="text" class="form-control radius-30 ps-5" id="inputName" placeholder="Adınızı Giriniz" asp-for="Name">
                                            </div>
                                        </div>
                                        <div class="col-12 ">
                                            <label for="inputName" class="form-label">Soyadınız</label>
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-person-circle"></i></div>
                                                <input type="text" class="form-control radius-30 ps-5" id="inputName" placeholder="Soyadınız Giriniz" asp-for="Surname">
                                            </div>
                                        </div>
                                        <div class="col-12 ">
                                            <label for="inputName" class="form-label">Kullanıcı Adınız</label>
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-person-circle"></i></div>
                                                <input type="text" class="form-control radius-30 ps-5" id="inputName" placeholder="Kullanıcı Adınızı Giriniz" asp-for="Username">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label for="inputEmailAddress" class="form-label">Email Adresiniz</label>
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-envelope-fill"></i></div>
                                                <input type="email" class="form-control radius-30 ps-5" id="inputEmailAddress" placeholder="Email Adresinizi Giriniz" asp-for="Email">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label for="inputChoosePassword" class="form-label">Şifreniz</label>
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-lock-fill"></i></div>
                                                <input type="password" class="form-control radius-30 ps-5" id="inputChoosePassword" placeholder="Şifrenizi Giriniz" asp-for="Password">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" asp-for="TermsAccepted" id="flexSwitchCheckChecked">
                                                <label class="form-check-label" for="flexSwitchCheckChecked"><a href="#" data-bs-toggle="modal" data-bs-target="#kvkkModal">Kullanım şartlarını</a> okudum & kabul ediyorum.</label>
                                                <span asp-validation-for="TermsAccepted" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="d-grid">
                                                <button type="submit" class="btn btn-warning radius-30">Kayıt Ol</button>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <p class="mb-0">Zaten bir hesabınız var mı? <a href="/Register/UserLogin/">Giriş Yapın</a></p>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!--end page main-->

    </div>
    <!--end wrapper-->
    <!--plugins-->
    <script src="/snacked/ltr/assets/js/jquery.min.js"></script>
    <script src="/snacked/ltr/assets/js/pace.min.js"></script>


</body>

</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- KVKK Modal -->
<div class="modal fade" id="kvkkModal" tabindex="-1" aria-labelledby="kvkkModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="kvkkModalLabel">Kişisel Verilerin Korunması (KVKK) Metni</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <p>
                    İşbu metin 6698 sayılı Kişisel Verilerin Korunması Kanunu (“KVKK”) kapsamında,
                    kişisel verilerinizin işlenmesi, saklanması ve paylaşılması ile ilgili olarak
                    sizleri bilgilendirmek amacıyla hazırlanmıştır.
                </p>
                <p>
                    Kişisel verileriniz, yalnızca yasal yükümlülükler çerçevesinde ve açık rızanız
                    doğrultusunda işlenecek olup, üçüncü kişilerle paylaşılmayacaktır.
                </p>
                <p>
                    Daha detaylı bilgi için <a href="#" target="_blank">KVKK Aydınlatma Metni</a>
                    sayfamızı ziyaret edebilirsiniz.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>