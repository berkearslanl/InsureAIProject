@model List<TrailerVideo>
@{
    ViewData["Title"] = "TrailerVideoList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Tanıtım Videosu Listesi</h5>
            <form class="ms-auto position-relative">
                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-search"></i></div>
                <input class="form-control ps-5" type="text" placeholder="search">
            </form>
        </div>
        <div class="table-responsive mt-3">
            <table class="table align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>Başlık</th>
                        <th>Resim Url</th>
                        <th>Video Url</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.Title</td>
                            <td>@x.CoverImageUrl</td>
                            <td>@x.VideoUrl</td>
                            <td>
                                <div class="table-actions d-flex align-items-center gap-3 fs-6">
                                    <a href="/TrailerVideo/UpdateTrailerVideo/@x.TrailerVideoId" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Düzenle"><i class="bi bi-pencil-fill"></i></a>
                                    <a href="/TrailerVideo/DeleteTrailerVideo/@x.TrailerVideoId" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Sil"><i class="bi bi-trash-fill"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/TrailerVideo/AddTrailerVideo/" class="btn btn-outline-dark">Yeni Tanıtım Videosu Girişi</a>
        </div>
    </div>
</div>