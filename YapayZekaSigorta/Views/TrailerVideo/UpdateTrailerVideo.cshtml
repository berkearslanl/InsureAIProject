@model TrailerVideo
@{
    ViewData["Title"] = "UpdateTrailerVideo";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Tanıtım Videosu Güncelleme Sayfası</h5>
        </div>
        <form method="post">
            <br>
            <input type="hidden" asp-for="TrailerVideoId" />
            <label class="form-label">Başlık</label>
            <br />
            <input type="text" class="form-control" asp-for="Title" />
            <br />
            <label class="form-label">Resim Yolu</label>
            <br />
            <input type="text" class="form-control" asp-for="CoverImageUrl" />
            <br />
            <label class="form-label">Video Yolu</label>
            <br />
            <input type="text" class="form-control" asp-for="VideoUrl" />
            <br />
            <button class="btn btn-outline-primary">Tanıtım Videosunu Kaydet</button>
        </form>
    </div>
</div>
