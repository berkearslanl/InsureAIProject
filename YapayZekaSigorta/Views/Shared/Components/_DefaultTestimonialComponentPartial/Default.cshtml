@model List<Testimonial>
<style>
    .profile-circle {
        width: 100px; /* Resmin genişliği */
        height: 100px; /* Resmin yüksekliği (genişlikle aynı olmalı) */
        border-radius: 50%; /* Tam yuvarlak yapar */
        object-fit: cover; /* Resmin yamulmasını engeller, merkeze odaklar */
        border: 3px solid #fff; /* İstersen etrafına beyaz bir çerçeve ekler */
        box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Hafif bir gölge derinlik katar */
    }
</style>
<section id="testimonial" class="testimonial-area pt-120 pb-30 p-relative fix" style="background-color: #28314b;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title center-align mb-50 text-center" data-aos="fade-up" data-aos-duration="1000">
                    <h2>Müşterilerimiz Bizim İçin Ne Dedi?</h2>
                </div>

            </div>
            <div class="col-lg-12">
                <div class="testimonial-active" data-aos="fade-up" data-aos-duration="1400">
                    @foreach (var x in Model)
                    {
                        <div class="single-testimonial">
                            <p>“@x.CommentDetail”.</p>
                            <div class="qt-img">
                                <img src="/insureyou/img/testimonial/qt-icon.png" alt="img">
                            </div>
                            <div class="testi-author">
                                <img src="@x.ImageUrl" alt="img" class="profile-circle">
                                <div class="ta-info">
                                    <h6>@x.NameSurname</h6>
                                    <span>@x.Title</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
        <div class="row align-items-center">

            <div class="col-md-12 text-center">
                <div class="text-bg" data-aos="fade-up" data-aos-duration="1000">
                    <h2>Geri Dönüşler</h2>
                </div>
            </div>
        </div>

    </div>
</section>