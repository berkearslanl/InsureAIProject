@using System.Text.RegularExpressions
@model List<Article>
<style>
    .read-more-btn {
        display: inline-flex;
        align-items: center;
        color: #4A7CFA; /* Sitedeki mavi tonu */
        font-weight: 600;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        margin-top: 15px;
        text-decoration: none;
    }

        .read-more-btn i {
            margin-left: 8px;
            transition: transform 0.3s ease;
        }

        .read-more-btn:hover {
            color: #355ec9; /* Hoverda biraz daha koyu mavi */
            text-decoration: none;
        }

            .read-more-btn:hover i {
                transform: translateX(5px); /* Ok işareti sağa doğru kaysın */
            }

    /* Kartın alt kısmına biraz boşluk eklemek için */
    .blog-content2 {
        padding-bottom: 25px;
    }

    .meta-info ul li i {
        color: #4A7CFA; /* Sitedeki mavi tonu */
        margin-right: 5px;
        font-size: 13px;
    }
</style>

<section id="blog" class="blog-area p-relative fix pt-90 pb-90">
    <div class="container">
        <div class="row align-items-center mb-50">
            <div class="col-lg-6 col-md-6">
                <div class="section-title center-align " data-aos="fade-up" data-aos-duration="1000">
                    <h2>
                        Son Sigorta Makaleleri
                    </h2>

                </div>

            </div>
            <div class="col-lg-6 col-md-6 text-right  d-none d-lg-block">
                <a href="/Blog/BlogList/" class="btn ss-btn" data-aos="fade-up" data-aos-duration="1000">Tüm Makalelerimiz </a>
            </div>
        </div>
        <div class="row" data-aos="fade-up" data-aos-duration="1400">
            @foreach (var x in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-post2 hover-zoomin mb-30 wow fadeInUp animated" data-animation="fadeInUp" data-delay=".4s">
                        <div class="blog-thumb2">
                            <a href="/Blog/BlogDetail/@x.ArticleId"><img src="@x.CoverImageUrl" alt="img" style="width:600px;height:300px"></a>
                        </div>
                        <div class="blog-content2">
                            <div class="b-meta">
                                <div class="meta-info">
                                    <ul>
                                        <li><i class="fal fa-user"></i> @x.AppUser.Name @x.AppUser.Surname</li>
                                        <li><i class="fal fa-calendar-alt"></i> @x.CreatedDate.ToString("dd MMM yyyy")</li>

                                    </ul>
                                </div>
                            </div>
                            <h4><a href="/Blog/BlogDetail/@x.ArticleId">@x.Title</a></h4>
                            @* <p>@x.Content.Substring(0,100)...</p> *@
                            @if (x.Content.Length > 100)
                            {
                                var plainText = Regex.Replace(x.Content, "<.*?>", "");
                                var summary = plainText.Length > 100
                                ? plainText.Substring(0, 100) + "..."
                                : plainText;
                                <p>@Html.Raw(summary)</p>
                            }
                            else
                            {
                                <p>@Html.Raw(x.Content)</p>
                            }
                            <div class="blog-btn">
                                <a href="/Blog/BlogDetail/@x.ArticleId" class="read-more-btn">
                                    Devamını Oku <i class="fal fa-long-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>