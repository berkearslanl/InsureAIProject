@model List<Article>
<style>
    .son-yazilar-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        display: block;
        border-radius: 8px; /* varsa tasarımına uygun */
    }

    .recent-blog-footer ul li {
        display: flex;
        align-items: center;
    }

    .recent-blog-footer .thum {
        width: 80px;
        height: 80px;
        flex-shrink: 0;
        overflow: hidden;
        border-radius: 8px;
    }
</style>
<div class="col-xl-3 col-lg-3 col-sm-6">
    <div class="footer-widget mb-30" data-aos="fade-up" data-aos-duration="1800">
        <div class="f-widget-title">
            <h2>Son Yazılar</h2>
        </div>
        <div class="recent-blog-footer">
            <ul>
                @foreach (var x in Model)
                {
                    <li>
                        <div class="thum"> <img src="@x.CoverImageUrl" class="son-yazilar-img" alt="img"></div>
                        <div class="text">
                            <a href="/Blog/BlogDetail/@x.ArticleId">@x.Title</a>
                            <span>@x.CreatedDate.ToString("dd MMM yyyy")</span>
                        </div>
                    </li>
                }

            </ul>


        </div>
    </div>
</div>